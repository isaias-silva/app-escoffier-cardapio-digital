generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  email      String  @unique
  name       String
  password   String
  resume     String?
  profile    String?
  background String?
}

model Menu {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  restaurantId String
  name         String
}

model Category {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  restaurantId String
  name         String
  keywords     String[]
}

model Dishe {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  menuId       String
  restaurantId String
  name         String
  price        Float
  image        String?
  mode         String   @default("MORNNING")
  description  String
  categoryId   String?
  galery       String[] @default([])
}
